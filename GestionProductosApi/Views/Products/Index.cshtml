@{
}
<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.0.1/css/toastr.css" rel="stylesheet" />
<div class="modal fade" id="modalAdd" tabindex="-1" role="dialog" aria-labelledby="exampleModal4Label" aria-hidden="true">
    <div class="modal-dialog modal-info" role="document">
        <div class="modal-content">
            <div class="modal-header bg-success">
                <h5 class="modal-title" id="exampleModal4Label">Agregar</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body" id="modalBrand">
                <div class="row">
                    <div class="col col-md-6">
                        <label for="productName">Nombre</label>
                        <input type="text" id="productName" class="form-control">
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="col col-md-10">
                        <label for="brandSelect">Marca</label>
                        <select class="custom-select" id="brandSelect">
                        </select>
                    </div>
                    <div class="col col-md-10 mt-2">
                        <label for="categorySelect">Categoria</label>
                        <select class="custom-select" id="categorySelect">
                        </select>
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="col col-md-5">
                        <label for="productPrice">Precio</label>
                        <input type="number" id="productPrice" class="form-control">
                    </div>
                    <div class="col col-md-5">
                        <label for="productSKU">SKU</label>
                        <input type="text" id="productSKU" class="form-control">
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <label for="productImage">Imagen</label>
                        <input type="text" id="productImage" class="form-control">
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal" id="btn-close">Cerrar</button>
                <button type="button" class="btn btn-success" onclick="addProduct()">Aceptar</button>
            </div>
        </div>
    </div>
</div>
<div class="grey-bg container-fluid">
    <section id="minimal-statistics">
        <div class="row">
            <div class="col offset-9">
                <button type="button" id="btnAddProduct" class="btn btn-success text-dark" data-toggle="modal" data-target="#modalAdd"><i class="fas fa-plus-circle"></i>Producto</button>
            </div>
        </div>
        <div class="row mt-4">
            <div class="col col-md-7 offset-2">
                <table id="tableProducts" class="display" style="width:100%">
                    <thead>
                        <tr>
                            <th>Nombre</th>
                            <th>Marca</th>
                            <th>Categoria</th>
                            <th>Precio</th>
                            <th>SKU</th>
                            <th>Imagen</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody id="bodyProduct"></tbody>
                </table>
            </div>
        </div>
    </section>
</div>
@section scripts{
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.0.1/js/toastr.js"></script>
    <script src="~/js/product.js"></script>
}

